$monitor-transition = all 0.2s ease
            
.screen
    &-wrap
        position: absolute
        top: 50%
        left: 50%
        transform: translate(-50%, -50%)
        width: 400px
        height: 260px
        transition: $monitor-transition
    &-shadow
        z-index: 1
        position: absolute
        width: 320px
        height: 60px
        left: 50%
        transform: translateX(-50%)
        bottom: -30px
        background-size: 100% 100%
        background-image: url(https://cdn.glitch.com/78a63c0e-9d0d-41d5-84ad-1c4a47e813e0%2Fgradient-rad.png)
        transition: $monitor-transition
    &-body
        z-index: 20
        position: absolute
        bottom: 0
        left: 100px
        width: 200px
        height: 220px
        background: linear-gradient(180deg, #FFFFFF 0%, #E0E0E0 100%)
        border-radius: 6px
        transition: $monitor-transition
    &-base
        z-index: 3
        position: absolute
        background: linear-gradient(360deg, #969696 -86.11%, #E0E0E0 100%)
        border-radius: 20px 20px 0 0
        width: 159px
        height: 18px
        left: 121px
        bottom: 20px
        transition: $monitor-transition
    &-stand
        z-index: 2
        position: absolute
        background: linear-gradient(180deg, #969696 0%, #E0E0E0 192.31%)
        width: 120px
        height: 18px
        left: 140px
        bottom: 18px
        transform: perspective( 60px ) rotateX( 45deg ) scaleX(0.8) scaleY(1.4)
        transition: $monitor-transition
    &-point1
        position: absolute
        width: 14px
        height: 14px
        left: 25px
        bottom: 30px
        background: #17191C
        border-radius: 20px
        transition: $monitor-transition
    &-point2
        position: absolute
        width: 70px
        height: 8px
        left: 50px
        bottom: 33px
        background: #17191C
        transition: $monitor-transition
    &-monitor
        position: absolute
        height: 130px
        width: 150px
        left: 25px
        top: 25px
        border-radius: 20px
        background: linear-gradient(180deg, #8D9990 0%, #354238 100%)
        transition: $monitor-transition
    &-flare
        position: absolute
        height: 26px
        width: 26px
        left: 16px
        top: 16px
        border-radius: 12px 0
        border-left: 6px solid white
        border-top: 6px solid white
        transition: $monitor-transition
    &-sizeinfo
        position: absolute
        top: -80px
        left: 50%
        transform: translateX(-50%)
        background: #1A1A1A
        padding: 10px 12px
        border-radius: 8px
        margin-bottom: 20px
        transition: $monitor-transition
        &:before
            content: ''
            display: block
            position: absolute
            left: 50%
            bottom: -18px
            transform: translateX(-50%)
            width: 0
            height: 0
            border-left: 20px solid transparent
            border-right: 20px solid transparent
            border-top: 20px solid #1A1A1A
        span
            font-family: arial, sans-serif
            font-weight: bold
            color: white
            font-size: 22px
    
