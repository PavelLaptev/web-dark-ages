                &:hover
                    background: linear-gradient(180deg, #D3D3D3 0%, #8E8E8E 100%)
                &:before
                    content: ''
                    display: block
                    position: absolute
                    background: linear-gradient(180deg, #FF2626 0%, #A02E2E 100%)
                    width: 18px
                    height: 18px
                    border-radius: 20px
                    left: 50%
                    top: 50%
